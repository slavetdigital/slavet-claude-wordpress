{
  "name": "slavet-claude-wordpress",
  "version": "1.3.0",
  "description": "Claude Code plugin to audit and assist enterprise-grade WordPress FSE theme development with zero-bloat, evidence-based reports, and WP.org compliance.",
  "author": {
    "name": "Slav\u0113t Digital",
    "url": "https://github.com/slavetdigital"
  },
  "homepage": "https://github.com/slavetdigital/slavet-claude-wordpress",
  "repository": "https://github.com/slavetdigital/slavet-claude-wordpress",
  "license": "MIT",
  "keywords": [
    "wordpress",
    "theme",
    "fse",
    "tailwind",
    "vite",
    "ci",
    "a11y",
    "wpcs",
    "theme-check",
    "seo",
    "plugin",
    "wporg-plugin",
    "readme.txt"
  ],
  "commands": [
    "./commands"
  ],
  "agents": "./agents",
  "hooks": "./hooks/hooks.json",
  "mcpServers": {
    "wordpress-local": {
      "enabled": false,
      "command": "node",
      "args": [
        "servers/wp-mcp.js"
      ],
      "cwd": "${CLAUDE_PLUGIN_ROOT}",
      "env": {
        "WPCLI_BIN": "wp",
        "THEME_CHECK_BIN": "theme-check",
        "PHPCS_BIN": "phpcs"
      }
    }
  }
}